<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="RSKMobileWallet.Views.ItemDetailPage" Title="{Binding Title}">
    <StackLayout Spacing="20" Padding="15">
        <Label Text="Address:" FontSize="Medium" FontAttributes="Bold" />
        <Label Text="{Binding Item.Address}" FontSize="Medium" />
        <Label Text="Balance:" FontSize="Medium" FontAttributes="Bold" />
        <Label Text="{Binding Item.Description}" FontSize="Medium" />
    </StackLayout>
</ContentPage>